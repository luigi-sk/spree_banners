<%= form_for([:admin, @banner] , :html => { :multipart => true }) do |f| %>
  <% if @banner.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@banner.errors.count, "error") %> prohibited this banner from being saved:</h2>

      <ul>
      <% @banner.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :image %><br />
    <% if @banner.image.exists? %>
      <%= image_tag @banner.image.url(:thumb) %><br />
    <% end %>
    <%= f.file_field :image %>
  </div>
  
  <div class="field">
    <%= f.label :target_url %><br />
    <%= f.text_field :target_link %>
  </div>
  <div class="field">
    <%= f.label :group_name %><br />
    <%= f.select :group_name, options_for_select(BannerGroupName::Names.map{|i| [i,i]}) %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
